<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="keywords" content="<%= page.keywords || config.keywords %>">
    <meta name="description" content="<%= page.description || config.description %>">
    <meta name="author" content="<%= theme.base_info.author || config.author || 'Keep Team' %>">
    <%- autoCanonical(config, page) %>
    <%
    let title = page.title;
    if (is_archive()) {
        title = __('archive');
        if (is_month()) {
            title += ': ' + page.year + '/' + page.month;
        } else if (is_year()) {
            title += ': ' + page.year;
        }
    } else if (is_category()) {
        title = __('category') + ': ' + page.category;
    } else if (is_tag()) {
        title = __('tag') + ': ' + page.tag;
    } else {
        title = __(page.title);
    }
    %>
    <title>
        <% if (title) { %>
            <%= title %> | Trusted Mate
        <% } else { %>
          <%= config.title %>
        <% } %>
    </title>
    <%- css('css/style') %>
    <%- favicon_tag(theme.style.favicon) %>
    <%- __css('css/font-awesome.min.css') %>
    <%- export_config() %>

    <meta property="og:site_name" content="<%= title || config.title %>">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= config.url + config.root + (page.path || '').replace('index.html', '') %>">
    <meta property="og:title" content="<%= title || config.title %>">
    <meta property="og:description" content="<%= page.description || config.description %>">
    <meta property="og:image" content="<%= config.url + (page.image || theme.style.favicon) %>">
    <!-- <meta property="og:image" content="<%= page.image || theme.style.favicon %>"> -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="<%= config.url + config.root + (page.path || '').replace('index.html', '') %>">
    <meta name="twitter:title" content="<%= title || config.title %>">
    <meta name="twitter:description" content="<%= page.description || config.description %>">
    <meta name="twitter:image" content="<%= config.url + (page.image || theme.style.favicon) %>">
    <meta name="twitter:site" content="<%= config.url %>">
    <meta itemprop="name" content="<%= title || config.title %>">
    <meta itemprop="description" content="<%= page.description || config.description %>">
    <meta itemprop="image" content="<%= config.url + (page.image || theme.style.favicon) %>"">
    <!-- Open Graph data -->
    <meta property="article:section" content="<%= page.description || config.description %>">
    <meta property="article:tag" content="<%= title || config.title %>">

    <link rel="preconnect" href="https://www.googletagmanager.com">
    <link rel="shortcut icon" href="<%= theme.style.favicon %>">
    <link rel="alternate" href="<%= config.url + config.root + (page.path || '').replace('index.html', '') %>" hreflang="en-US"/> 

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BDRH8QVPRH"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-BDRH8QVPRH');
    </script>
    <!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->
    <% if (is_post()) { %>
            <script type="application/ld+json">
              {
                "@context": "schema.org",
                "@type": "Guide",
                "name": "<%= page.title %>",
                "text": "<%= page.description %>",
                "hasPart": [
                  {
                    "@type": "Recommendation",
                    "category": "<%= page.recommendationcategory %>",
                    "name": "<%= page.recommendationname %>",
                    "itemReviewed": {
                      "@type": "Product",
                      "name": "<%= page.brandname %>",
                      "mpn": "<%= page.brandsku %>",
                      "offers": {
                        "@type" : "Offer",
                        "price" : "<%= page.price %>",
                        "priceCurrency": "<%= page.pricecurrency %>",
                         "url": "<%= page.affiliateurl %>",
                         "availability": "https://schema.org/OnlineOnly",
                         "priceValidUntil": "2021-12-31"
                       },
                       "brand" : {
                        "@type" : "Brand",
                        "name" : "<%= page.brandname %>",
                        "logo" : "<%= page.brandlogo %>"
                      },
                      "aggregateRating" : {
                        "@type" : "AggregateRating",
                        "ratingValue" : "10",
                        "bestRating" : "10",
                        "worstRating" : "5",
                        "ratingCount" : "10"
                      },
                      "review" : {
                        "@type" : "Review",
                        "author" : {
                          "@type" : "Person",
                          "name" : "Trusted Mate"
                        },
                        "datePublished" : "<%= page.date %>",
                        "reviewRating" : {
                          "@type" : "Rating",
                          "ratingValue" : "10",
                          "bestRating" : "10"
                        },
                        "reviewBody" : "<%= page.reviewbody %>"
                      },
                      "description": "<%= page.description %>",
                      "image" : "<%= config.url +  page.image %>",
                      "sku": "<%= page.brandsku %>"
                     },
                    "reviewAspect": "<%= page.reviewaspect %>",
                    "reviewRating": {
                      "@type": "Rating",
                      "ratingValue": 10,
                      "bestRating": 10,
                      "worstRating": 5
                    },
                    "author" : {
                        "@type" : "Person",
                        "name" : "Trusted Mate"
                      },
                    "reviewBody": "<%= page.reviewbody %>"
                  }
                ]
              }
              </script>
    <% } else { %>
      <script type="application/ld+json">{
        "@context": "http://schema.org",
        "@type": "WebSite",
        "name": "<%= config.title %>",
        "url": "<%= config.url + config.root + (page.path || '').replace('index.html', '') %>"
        }</script>
    <% } %>
    <link rel="apple-touch-icon" href="<%= theme.style.favicon %>">
</head>

